# vim: ft=python


Import('env', 'pylowl')


Help('''
        pflda           Build pflda
        pflda-install   Install pflda
'''.lstrip('\r\n'))


pflda = env.DistutilsBuildExt('core', 'core', deps=[pylowl, 'pylowl.pxd', 'data.py'])
env.Alias('pflda', pflda)

install_pflda = env.DistutilsInstall('pflda-install', pflda, deps=['run_pf', 'run_gibbs', 'data.py', '__init__.py'])
